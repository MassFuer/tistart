{{!--
  Button partial - Usage: {{> button href="url" text="Button Text" variant="primary"}}
  Variants: primary (dark), success (green), secondary (light)
--}}
<table cellpadding="0" cellspacing="0" style="margin: 24px 0;">
  <tr>
    <td align="center" style="border-radius: 6px; background-color: {{#if (eq variant 'success')}}{{colors.success}}{{else if (eq variant 'secondary')}}{{colors.secondary}}{{else}}{{colors.primary}}{{/if}};">
      <a href="{{href}}" target="_blank" style="
        display: inline-block;
        padding: 12px 24px;
        font-size: 14px;
        font-weight: 500;
        color: {{#if (eq variant 'secondary')}}{{colors.secondaryForeground}}{{else}}{{colors.primaryForeground}}{{/if}};
        text-decoration: none;
        border-radius: 6px;
      ">{{text}}</a>
    </td>
  </tr>
</table>