# --- SHARED SECRETS (Same for all environments) ---
TOKEN_SECRET=your-secret-key-at-least-32-chars
JWT_EXPIRES_IN=6h
RESEND_API_KEY=
STRIPE_SECRET_KEY=
CLOUDINARY_CLOUD_NAME=
# ... other shared secrets

# --- ENVIRONMENT SELECTOR ---
# Set to 'development', 'server' (Homelab), or 'production' (Cloud)
NODE_ENV=development

# --- 1. LOCAL DEVELOPMENT (Default) ---
MONGODB_URI=mongodb://localhost:27017/nemesis
CLIENT_URL=http://localhost:5173
PORT=5005

# --- 2. UBUNTU SERVER (Set NODE_ENV=server) ---
SERVER_MONGODB_URI=mongodb://mongo:27017/nemesis
SERVER_CLIENT_URL=https://art.yourdomain.com
SERVER_PORT=5005

# --- 3. CLOUD PRODUCTION (Set NODE_ENV=production) ---
PROD_MONGODB_URI=mongodb+srv://...
PROD_CLIENT_URL=https://myapp.vercel.app
PROD_PORT=5005

# --- SEED DATA ---
SEED_PASSWORD=
SEED_ADMIN_PASSWORD=
SEED_SUPERADMIN_PASSWORD=