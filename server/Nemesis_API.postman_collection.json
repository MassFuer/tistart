                },
                {
                  "key": "category",
                  "value": "painting",
                  "disabled": true
                },
                {
                  "key": "minPrice",
                  "value": "100",
                  "disabled": true
                },
                {
                  "key": "maxPrice",
                  "value": "5000",
                  "disabled": true
                },
